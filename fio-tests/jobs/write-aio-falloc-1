[global]
ioengine=falloc
iodepth=1
direct=0
buffered=0
directory=${DIRECTORY}
size=${SIZE}
filesize=${SIZE}
nrfiles=1
group_reporting
exec_prerun=echo 3 > /proc/sys/vm/drop_caches

# Run falloc and punch_hole threads in parallel
# After activity file will be highly fragmented
[falloc-fuzzer]
stonewall
runtime=5
time_based=5
bssplit=4k/10:64k/50:32k/40
rw=randwrite
numjobs=1
filename=fragmented_file

[punch hole-fuzzer]
bs=4k
runtime=5
time_based=5
rw=randtrim
numjobs=2
filename=fragmented_file

## Mesure IO performance on fragmented file
[sequential aio-dio write]
stonewall
ioengine=libaio
numjobs=1
iodepth=128
buffered=0
direct=1
rw=write
bs=64k
filename=fragmented_file
log_avg_msec=${LOG_AVG_MSEC}
write_bw_log=job1
write_lat_log=job1
write_iops_log=job1
