#
# Based on http://www.slideshare.net/markwkm/filesystem-performance-from-a-database-perspective
#
[seq-read]
rw=read
directory=${DIRECTORY}
size=${SIZE}
runtime=${RUNTIME}
fadvise_hint=0
blocksize=8k
direct=1
numjobs=1
nrfiles=1
ioengine=libaio
time_based
exec_prerun=echo 3 > /proc/sys/vm/drop_caches

[seq-write]
rw=write
directory=${DIRECTORY}
size=${SIZE}
runtime=${RUNTIME}
fadvise_hint=0
blocksize=8k
direct=1
numjobs=1
nrfiles=1
ioengine=libaio
time_based

[random-read]
rw=randread
directory=${DIRECTORY}
size=${SIZE}
runtime=${RUNTIME}
fadvise_hint=0
blocksize=8k
direct=1
numjobs=8
nrfiles=1
ioengine=libaio
time_based
thinktime=1000

[random-write]
rw=randwrite
directory=${DIRECTORY}
size=${SIZE}
runtime=${RUNTIME}
fadvise_hint=0
blocksize=8k
direct=1
numjobs=8
nrfiles=1
ioengine=libaio
time_based
thinktime=2000

[read-write]
rw=rw
rwmixread=80
directory=${DIRECTORY}
size=${SIZE}
runtime=${RUNTIME}
fadvise_hint=0
blocksize=8k
direct=1
numjobs=8
nrfiles=1
ioengine=libaio
time_based
